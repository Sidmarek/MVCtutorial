@model MVCtutorial.File.Models.FileFormModel
@{ 
    ViewBag.Title = "File Managment System(FMS)";
}

<h2>@ViewBag.Title.</h2>

@foreach (string mask in ViewBag.masks) {
    <b>Following files are in mask: "@mask":</b><br>
    foreach (string file in ViewBag.files) {
        @file
        <a href="/File/downloadFile?nameFile=@file">Download</a>
        if (file.Contains(".pdf") || file.Contains(".txt"))
        {
            <a href="/File/downloadFile?nameFile=@file&View=1">View</a><br>
        }
        else
        {
            <br>
        }
    }
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}