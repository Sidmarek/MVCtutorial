
@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "Homepage";
}
<h2>Homepage</h2>
<div class="jumbotron">
    <p class="lead">Prepare yourself for stunning experience on new users.nordit.cz vizulization platform with NORDIT platform brand</p>
    @if (!(Request.IsAuthenticated))
    {
        <p class="lead">This is welcome screen please @Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</p>
    }
    else
    {
        <p class="lead">If you wan to continue into your bakery please @Html.ActionLink("click here", "Homepage", "Home")</p>
    }
</div>
