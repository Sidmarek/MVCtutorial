@model MVCtutorial.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Default View";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("DefaultViewForm", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Change your Default View</h4>
    <div class="message">
        @ViewBag.message
    </div>
    <hr />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <select name="views">
                @{
                    int i = 0;
                    List<string> name_current = new List<string>();
                    List<string> plc = ViewBag.plc;
                    int max = plc.Count;
                 }
                
                @foreach (String name in ViewBag.names)
                {
                    if (i < max - 1 & name_current.Contains(name))
                    {
                        i++;
                    }
                    <option value="@name@ViewBag.plc[i]">@ViewBag.plc[i] @name </option>

                    name_current.Add(name);
                }
             </select>
            </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Choose Default View" class="btn btn-default" />
        </div>
    </div>
}
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
